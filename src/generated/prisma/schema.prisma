// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum Role {
  USER
  ADMIN
}

model User {
  id    Int    @id @default(autoincrement())
  name  String
  email String @unique
  role  Role
  cvs   Cv[]
}

model Cv {
  id     Int     @id @default(autoincrement())
  name   String
  job    String
  userId Int
  user   User    @relation(fields: [userId], references: [id])
  skills Skill[] @relation("CvSkills")
}

model Skill {
  id   Int    @id @default(autoincrement())
  name String
  cvs  Cv[]   @relation("CvSkills")
}
