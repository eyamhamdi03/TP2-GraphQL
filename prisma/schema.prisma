generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql" 
  url      = env("DATABASE_URL")
}

enum Role {
  USER
  ADMIN
}

model User {
  id    Int    @id @default(autoincrement())
  name  String
  email String @unique
  age   Int?
  role  Role
  cvs   Cv[]   /
}

model Cv {
  id        Int      @id @default(autoincrement())
  name      String
  age       Int
  job       String
  owner     User     @relation(fields: [userId], references: [id]) 
  skills    Skill[]  @relation("CvSkills")
}

model Skill {
  id          Int    @id @default(autoincrement())
  designation String
  cvs         Cv[]   @relation("CvSkills")  // This is the reverse relation to Cv
}
